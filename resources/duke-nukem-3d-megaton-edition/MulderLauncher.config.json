{
  "game": {
    "title": "Duke Nukem 3D: Megaton Edition",
    "originalExe": "duke3d.exe"
  },
  "addons": [
    { "title": "Duke Nukem 3D: Atomic Edition" },
    { "title": "Duke It Out In D.C.", "steamId": 1 },
    { "title": "Duke: Nuclear Winter", "steamId": 2 },
    { "title": "Duke Caribbean: Life's A Beach", "steamId": 3 }
  ],
  "optionGroups": [
    {
      "name": "Executable",
      "type": "radioGroup",
      "radios": [
        { "value": "eDuke32 (better quality)" },
        { "value": "Steam (achievements && multiplayers)" }
      ]
    },
    {
      "name": "Vanilla Textures",
      "type": "checkboxGroup",
      "checkboxes": [
        { "value":"AI Upscaled Textures", "disabledWhen": [{ "Executable": "Steam (achievements && multiplayers)" }] }
      ]
    },
    {
      "name": "High Resolution Pack",
      "type": "radioGroup",
      "radios": [
        { "value": "Disabled" },
        { "value": "Enabled (classic monsters)" },
        { "value": "Enabled (modern monsters)", "disabledWhen": [{ "Addon": "Duke Caribbean: Life's A Beach" }, { "Addon": "Duke: Nuclear Winter" }] }
      ]
    },
    {
      "name": "Misc",
      "type": "checkboxGroup",
      "checkboxes": [
        { "value": "Show eDuke32 config", "disabledWhen": [{ "Executable": "Steam (achievements && multiplayers)" }] },
        { "value": "Skip intro videos", "disabledWhen": [{ "Executable": "Steam (achievements && multiplayers)" }] }
      ]
    }
  ],
  "actions":{
    "exe": [
      { "when": [{"Executable": "Steam (achievements && multiplayers)"}], "result": ["..\\bin\\duke3d_o.exe", ""] },
      { "when": [{"Executable": "eDuke32 (better quality)"}], "result": ["..\\eduke32\\eduke32.exe", ""] }
    ],
    "args": [
      { "when": [{"Addon": "Duke Nukem 3D: Atomic Edition", "Executable":"eDuke32 (better quality)"}], "result": "-gamegrp duke3d.grp" },
      { "when": [{"Addon": "Duke It Out In D.C."}], "result": "-addon 1" },
      { "when": [{"Addon": "Duke It Out In D.C.", "Executable":"eDuke32 (better quality)"}], "result": "-j addons\\dc -gamegrp dukedc.grp" },
      { "when": [{"Addon": "Duke: Nuclear Winter"}], "result": "-addon 2" },
      { "when": [{"Addon": "Duke: Nuclear Winter", "Executable":"eDuke32 (better quality)"}], "result": "-j addons\\nw -gamegrp nwinter.grp" },
      { "when": [{"Addon": "Duke Caribbean: Life's A Beach"}], "result": "-addon 3" },
      { "when": [{"Addon": "Duke Caribbean: Life's A Beach", "Executable":"eDuke32 (better quality)"}], "result": "-j addons\\vacation -gamegrp vacation.grp" },

      { "when": [{"Vanilla Textures": "AI Upscaled Textures"}], "result": "-gdukeupscale.zip -mh dukeupscale.def" },
      { "when": [{"Vanilla Textures": "AI Upscaled Textures", "Addon": "Duke: Nuclear Winter"}], "result": "-mh nwupscale.def" },
      { "when": [{"Vanilla Textures": "AI Upscaled Textures", "Addon": "Duke Caribbean: Life's A Beach"}], "result": "-mh vacaupscale.def" },

      { "when": [{"High Resolution Pack": "Enabled (modern monsters)"}, {"High Resolution Pack": "Enabled (classic monsters)"}], "result": "-gduke3d_hrp.zip" },
      { "when": [{"High Resolution Pack": "Enabled (modern monsters)", "Addon": "Duke It Out In D.C."}, {"High Resolution Pack": "Enabled (classic monsters)", "Addon": "Duke It Out In D.C."}], "result": "-gdukedc_hrp.zip" },
      { "when": [{"High Resolution Pack": "Enabled (modern monsters)", "Addon": "Duke: Nuclear Winter"}, {"High Resolution Pack": "Enabled (classic monsters)", "Addon": "Duke: Nuclear Winter"}], "result": "-gnwinter_hrp.zip" },
      { "when": [{"High Resolution Pack": "Enabled (modern monsters)", "Addon": "Duke Caribbean: Life's A Beach"}, {"High Resolution Pack": "Enabled (classic monsters)", "Addon": "Duke Caribbean: Life's A Beach"}], "result": "-gvacation_hrp.zip" },
      { "when": [{"High Resolution Pack": "Enabled (modern monsters)", "Executable": "Steam (achievements && multiplayers)"}, {"High Resolution Pack": "Enabled (classic monsters)", "Executable": "Steam (achievements && multiplayers)"}], "result": "-gduke3d_megaton_hrp_override_custom.zip -gclassic_weapons.zip" },
      { "when": [{"High Resolution Pack": "Enabled (classic monsters)"}], "result": "-gclassic_monsters.zip" },
      
      { "when": [{"High Resolution Pack": "Enabled (classic monsters)", "Addon": "Duke: Nuclear Winter", "Executable": "Steam (achievements && multiplayers)"}], "result": "-hnwinter_hrp_steam.def" },
      { "when": [{"High Resolution Pack": "Enabled (classic monsters)", "Addon": "Duke: Nuclear Winter", "Executable": "eDuke32 (better quality)"}], "result": "-mh nwinter_hrp.def" },
      { "when": [{"High Resolution Pack": "Enabled (classic monsters)", "Addon": "Duke Caribbean: Life's A Beach", "Executable": "Steam (achievements && multiplayers)"}], "result": "-hvacation_hrp_steam.def" },
      { "when": [{"High Resolution Pack": "Enabled (classic monsters)", "Addon": "Duke Caribbean: Life's A Beach", "Executable": "eDuke32 (better quality)"}], "result": "-mh vacation_hrp.def" },

      { "when": [{"Executable": "eDuke32 (better quality)", "Misc":"Show eDuke32 config"}], "result": "-setup" },
      { "when": [{"Executable": "eDuke32 (better quality)", "Misc":"Skip intro videos"}], "result": "-quick" }
    ]
  }
}
